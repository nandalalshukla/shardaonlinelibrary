# Server Configuration
PORT=5000

# Frontend URL (for CORS)
VERCEL_FRONTEND_URL=https://your-app.vercel.app

# JWT Secrets (Generate strong random strings for production!)
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
VERIFY_EMAIL_TOKEN_SECRET=your_verify_email_token_secret_here
FORGOT_PASSWORD_TOKEN_SECRET=your_forgot_password_token_secret_here
CHANGE_PASSWORD_TOKEN_SECRET=your_change_password_token_secret_here

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=yourapp
MONGO_DB_NAME=your_database_name

# Email Configuration (for OTP and notifications)
# IMPORTANT: For Gmail, you MUST use an App Password, not your regular password
# How to generate Gmail App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification if not already enabled
# 3. Go to https://myaccount.google.com/apppasswords
# 4. Generate a new app password for "Mail"
# 5. Use that 16-character password below (without spaces)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_character_app_password

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
